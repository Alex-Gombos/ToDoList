<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.p3project.HelloController2">
    <AnchorPane VBox.vgrow="ALWAYS">
        <Label fx:id="labelTitle" alignment="CENTER" layoutX="298.0" layoutY="86.0" style="&#10;" text="Login"
               textAlignment="CENTER">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <TextField fx:id="nameField" layoutX="137.0" layoutY="146.0" prefHeight="26.0" prefWidth="410.0"/>
        <Label fx:id="labelName" alignment="CENTER" layoutX="40.0" layoutY="145.0" style="&#10;" text="Name"
               textAlignment="CENTER">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="emailField" layoutX="137.0" layoutY="174.0" prefHeight="26.0" prefWidth="410.0"/>
        <Label fx:id="labelEmail" alignment="CENTER" layoutX="40.0" layoutY="173.0" style="&#10;" text="Email"
               textAlignment="CENTER">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <PasswordField fx:id="passwordField" layoutX="137.0" layoutY="201.0" prefHeight="26.0" prefWidth="410.0"/>
        <Label fx:id="labelPassword" alignment="CENTER" layoutX="40.0" layoutY="200.0" style="&#10;" text="Password"
               textAlignment="CENTER">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Button fx:id="btnSubmit" layoutX="293.0" layoutY="263.0" mnemonicParsing="false"
                onMouseClicked="#clickSubmit" text="Submit"/>
    </AnchorPane>
</VBox>
